/* backup of current jamendo.css */

/* ===============================
   JAMENDO SECTION â€“ MATCH TRENDING
================================ */

.jamendo-section {
  margin: 3rem auto;
  padding: 2rem;
  max-width: 1600px;
}

/* Header */
.section-header {
  display: flex;
  flex-direction: column;
  gap: 6px;
  margin-bottom: 18px;
}

.section-title {
  font-size: 1.4rem;
  display: flex;
  align-items: center;
  gap: 10px;
  color: #fff;
}

.section-title i {
  color: rgb(13, 118, 199);
}

.section-subtitle {
  color: rgba(255,255,255,0.65);
  font-size: 0.95rem;
}

/* ===============================
   SEARCH BAR (MATCH FILTER BUTTONS)
================================ */
.jamendo-search {
  display: flex;
  gap: 12px;
  align-items: center;
  margin: 25px 0 35px;
  justify-content: center;
}

.jamendo-search-input {
  width: 100%;
  max-width: 520px;
  padding: 14px 22px;
  border-radius: 50px;
  border: 2px solid rgba(13, 118, 199, 0.3);
  background: rgba(255,255,255,0.05);
  backdrop-filter: blur(12px);
  color: #fff;
  font-size: 1rem;
  transition: all 0.35s ease;
}

.jamendo-search-input::placeholder {
  color: rgba(255,255,255,0.6);
}

.jamendo-search-input:focus {
  outline: none;
  border-color: rgb(13, 118, 199);
  box-shadow: 0 0 25px rgba(13,118,199,0.45);
}

/* Search Button */
.jamendo-search-btn {
  padding: 14px 26px;
  border-radius: 50px;
  border: none;
  background: linear-gradient(135deg, rgb(13,118,199), rgb(10,95,160));
  color: #fff;
  font-weight: 700;
  cursor: pointer;
  transition: all 0.35s ease;
  box-shadow: 0 10px 30px rgba(13,118,199,0.45);
}

.jamendo-search-btn:hover {
  transform: translateY(-3px);
  box-shadow: 0 15px 40px rgba(13,118,199,0.6);
}

.jamendo-clear-btn {
  background: transparent;
  border: 1px solid rgba(255,255,255,0.2);
  color: rgba(255,255,255,0.7);
  padding: 12px 20px;
  border-radius: 50px;
  cursor: pointer;
}

/* ===============================
   TRACK RESULTS (CARD STYLE)
================================ */
.jamendo-tracks {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 30px;
}

.jamendo-track {
  position: relative;
  padding: 18px;
  border-radius: 20px;
  background: rgba(255,255,255,0.05);
  backdrop-filter: blur(12px);
  border: 2px solid rgba(13,118,199,0.25);
  transition: all 0.4s ease;
  cursor: pointer;
}

.jamendo-track:hover {
  transform: translateY(-8px);
  border-color: rgb(13,118,199);
  box-shadow: 0 20px 45px rgba(13,118,199,0.45);
}

/* Track Info */
.jamendo-track-info {
  margin-bottom: 10px;
}

.jamendo-track-name {
  font-size: 1.1rem;
  font-weight: 700;
  color: #fff;
  margin-bottom: 4px;
}

.jamendo-artist {
  font-size: 0.95rem;
  color: rgba(255,255,255,0.65);
}

/* Audio */
.jamendo-audio {
  width: 100%;
  border-radius: 12px;
  margin-top: 8px;
}

/* Empty state */
.jamendo-no-results {
  padding: 18px;
  text-align: center;
  color: rgba(255,255,255,0.7);
  background: rgba(255,255,255,0.05);
  border-radius: 16px;
  border: 1px solid rgba(13,118,199,0.25);
}

/* ===============================
   RESPONSIVE
================================ */
@media (max-width: 768px) {
  .jamendo-search {
    flex-direction: column;
    gap: 15px;
  }

  .jamendo-search-input {
    max-width: 100%;
  }
}
